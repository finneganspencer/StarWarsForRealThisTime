@using StarWarsWebsite.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<h2>@ViewBag.Title.</h2>
<div class="container">

    <div class="row" id="pwd-container">
        <div class="col-md-4"></div>

        <div class="col-md-4">
            <section class="login-form">
                <form method="post" action="#" role="login">
                    <img src="~/Content/Images/Title.png" class="img-responsive" alt="" />
                    <input type="email" name="email" placeholder="Email" required class="form-control input-lg" value="" />

                    <input type="password" class="form-control input-lg" id="password" placeholder="Password" required="" />


                    <div class="pwstrength_viewport_progress"></div>


                    <button id="login" type="submit" class="btn btn-lg btn-primary btn-block" onclick="myFunction()">Sign in</button>
                    <div>
                        <a href="@Url.Action("Register","Home")">Create account</a> or <a href="#">reset password</a>
                    </div>

                </form>

            </section>
        </div>
        <script>
            function myFunction() {
                document.getElementById("login").value = '';
            }
        </script>
        <div class="col-md-4"></div>

    </div>

